{
  "extends": [
    "./.comlint/.stylelintrc.json"
  ],
  "rules": {
    "unit-no-unknown": [true, {
      "ignoreUnits": ["rpx", "rx"]
    }],
    "property-no-vendor-prefix": [
      true,
      {
        "ignoreProperties": [
          "background-clip"
        ]
      }
    ],
    "selector-type-no-unknown": [true, {
      "ignoreTypes": ["page"]
    }],
    "comment-empty-line-before": ["always", {
      "ignoreComments": ["#endif"]
    }],
    "selector-not-notation": "simple"
  }
}